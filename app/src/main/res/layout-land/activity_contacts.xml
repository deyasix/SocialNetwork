<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSecondary">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineTopBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideLineTopBar"
        android:background="?attr/colorPrimary"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/imageButtonBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewContacts"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="@id/textViewContacts"
        app:layout_constraintEnd_toStartOf="@id/textViewContacts">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/back_button_description"
            android:layout_marginStart="@dimen/margin_end_start"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_back_24px"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/textViewContacts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/contacts"
        android:textSize="@dimen/text_size_contacts"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_contacts"
        app:layout_constraintHorizontal_weight="2"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_semi_bold"
        app:layout_constraintStart_toEndOf="@id/imageButtonBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageButtonSearch"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/imageButtonSearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/textViewContacts"
        app:layout_constraintTop_toTopOf="@id/textViewContacts"
        app:layout_constraintBottom_toBottomOf="@id/textViewContacts"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/search_button_description"
            android:layout_marginEnd="@dimen/margin_end_start"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/ic_search"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/textViewAddContacts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_contacts"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_add_contacts"
        android:fontFamily="@font/open_sans_semi_bold"
        android:padding="@dimen/margin_end_start"
        app:layout_constraintTop_toBottomOf="@id/textViewContacts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideLineTopBar"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewContacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/user_item"
        android:paddingTop="@dimen/margin_top_contacts"
        android:paddingHorizontal="@dimen/margin_top_contacts"
        app:layout_constraintTop_toTopOf="@id/guideLineTopBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>